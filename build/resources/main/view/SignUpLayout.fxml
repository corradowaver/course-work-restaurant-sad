<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="562.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SignUpController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="257.0" layoutY="33.0" prefHeight="103.0" prefWidth="488.0" text="Давайте зарегистрируем Вас">
         <font>
            <Font name="Consolas Bold" size="30.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="330.0" layoutY="120.0" prefHeight="364.0" prefWidth="341.0">
         <children>
            <TextField fx:id="usernameField" promptText="юзернейм">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="passwordField" promptText="пассворд">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="nameField" promptText="ваше имя">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="addressField" promptText="ваш адрес">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="phoneField" promptText="контактный телефон">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="14.0" />
               </font>
            </TextField>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: rgb(252, 224, 0); -fx-background-radius: 15px;" text="Готово!">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <Button fx:id="signInButton" layoutX="790.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleSignIn" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: rgb(252, 224, 0); -fx-background-radius: 15px;" text="У меня уже есть аккаунт!">
         <font>
            <Font name="Consolas Bold" size="12.0" />
         </font></Button>
   </children>
</AnchorPane>
